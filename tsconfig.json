{
  "include": [
    "src"
  ],

  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "target": "esnext",
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["dom", "es2020"],
    "baseUrl": ".",
    "paths": {
      "@romejs/*": ["./vendor/rome/packages/@romejs/*"],
      "@romejs-web/*": ["./vendor/rome/packages/@romejs-web/*"],
      "@romejs-runtime/*": ["./vendor/rome/packages/@romejs-runtime/*"],
      "*": ["./vendor/rome/packages/@romejs-runtime/*"]
    }
  }
}
